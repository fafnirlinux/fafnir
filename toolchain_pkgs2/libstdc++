ver=%gcc:ver%

[srcs]
https://ftp.gnu.org/gnu/gcc/gcc-%ver/gcc-%ver.tar.xz

[build]
mkdir build && cd build

../libstdc++-v3/configure \
	--host=$TARGET \
	--build=$(../config.guess) \
	--prefix=%prefix \
	--disable-multilib \
	--disable-nls \
	--disable-libstdcxx-pch \
	--with-gxx-include-dir=$TARGET/include/c++/11.2.0

%make && make DESTDIR=%rootfs install
