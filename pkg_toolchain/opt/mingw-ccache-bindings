ver=10.2.0

[deps]
ccache
mingw-w64-gcc

[build]
install -d %dest/lib/ccache
ln -s ../../bin/ccache %dest/lib/ccache/i686-w64-mingw32-c++
ln -s ../../bin/ccache %dest/lib/ccache/i686-w64-mingw32-g++
ln -s ../../bin/ccache %dest/lib/ccache/i686-w64-mingw32-gcc
ln -s ../../bin/ccache %dest/lib/ccache/x86_64-w64-mingw32-c++
ln -s ../../bin/ccache %dest/lib/ccache/x86_64-w64-mingw32-g++
ln -s ../../bin/ccache %dest/lib/ccache/x86_64-w64-mingw32-gcc
