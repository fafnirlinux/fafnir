ver=5.1.16

[deps]
readline

[srcs]
http://ftpmirror.gnu.org/gnu/%name/%name-5.1.tar.gz

[build]
gunzip -c %files/%name-%ver.patch.gz | patch -p0
%conf \
	 --exec-prefix= \
	 --disable-nls \
	 --with-curses \
	 --with-installed-readline
make -j1
install -D -m 755 bash %dest/bin/bash
install -D -m 644 doc/bash.1 %dest/share/man/man1/bash.1
install -D -m 644 %files/profile %dest/etc/profile
