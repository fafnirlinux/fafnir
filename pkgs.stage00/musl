ver=1.2.3

[srcs]
https://www.musl-libc.org/releases/musl-%ver.tar.gz

[build]
ARCH=$MARCH \
CC=$XTARGET-gcc \
CROSS_COMPILE=$XTARGET- \
LIBCC="%tools/lib/gcc/$XTARGET/12.1.0/libgcc.a" \
%conf \
	--host=$XTARGET \
	--build=$XHOST

%make \
	AR=$XTARGET-ar \
	RANLIB=$XTARGET-ranlib

%make \
	AR=$XTARGET-ar \
	RANLIB=$XTARGET-ranlib \
	DESTDIR=%rootfs \
	install

ln -sf %rootfs/lib/libc.so ld-musl-$MARCH.so.1
