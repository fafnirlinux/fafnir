ver=9.4.1

[deps]
eudev

[srcs]
https://roy.marples.name/downloads/dhcpcd/%name-%ver.tar.xz

[build]
%conf \
	--libexecdir=/lib/dhcpcd \
	--dbdir=/var/lib/dhcpcd \
	--sysconfdir=/etc/dhcpcd \
	--enable-privsep \
	--privsepuser=dhcpcd
%mk

install -d -o dhcpcd -g dhcpcd %dest/var/lib/dhcpcd
install -D -m 0755 %files/rc.dhcpcd %dest/etc/rc.d/dhcpcd

chmod -R u+w %dest

[install]
getent group dhcpcd || /usr/sbin/groupadd -r dhcpcd
getent passwd dhcpcd || /usr/sbin/useradd -r -d /var/lib/dhcpcd -s /bin/false dhcpcd
/usr/bin/passwd -l dhcpcd
