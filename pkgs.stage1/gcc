ver=12.1.0
gmp_ver=6.2.1
mpc_ver=1.2.1
mpfr_ver=4.1.0

workdir=%name-%ver
force-patch=yes

[srcs]
https://ftp.gnu.org/gnu/%name/%name-%ver/%name-%ver.tar.xz
https://ftp.gnu.org/gnu/gmp/gmp-%gmp_ver.tar.xz
https://ftp.gnu.org/gnu/mpc/mpc-%mpc_ver.tar.gz
https://www.mpfr.org/mpfr-%mpfr_ver/mpfr-%mpfr_ver.tar.xz

[build]
mv ../gmp* gmp
mv ../mpc* mpc
mv ../mpfr* mpfr

mkdir build && cd build

.%conf \
	--host=$XTARGET \
	--target=$XTARGET \
	--build=$XHOST \
	--enable-languages=c,c++ \
	--disable-multilib \
	--disable-bootstrap \
	--disable-libsanitizer \
	--disable-werror \
	--enable-initfini-array $GCCARGS

%make all-gcc
make DESTDIR=%rootfs install-strip-gcc

%make \
	enable_shared=yes \
	all-target-libgcc

make DESTDIR=%rootfs install-strip-target-libgcc

%make all-target-libstdc++-v3
make DESTDIR=%rootfs install-strip-target-libstdc++-v3
