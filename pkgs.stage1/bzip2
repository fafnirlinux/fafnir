ver=1.0.8

[srcs]
https://www.sourceware.org/pub/%name/%name-%ver.tar.gz

[build]
export CFLAGS="-fPIC"
sed -i 's@\(ln -s -f \)$(PREFIX)/bin/@\1@' Makefile
sed -i "s@(PREFIX)/man@(PREFIX)/share/man@g" Makefile
make -f Makefile-libbz2_so CC=$CC AR=$AR RANLIB=$RANLIB
make clean
%make CC=$CC AR=$AR RANLIB=$RANLIB
make DESTDIR=%rootfs PREFIX=%prefix install
cp bzip2-shared %rootfs/usr/bin/bzip2
cp -a libbz2.so* %rootfs/usr/lib
ln -s libbz2.so.1.0 %rootfs/usr/lib/libbz2.so
