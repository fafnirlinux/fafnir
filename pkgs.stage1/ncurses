ver=6.3

[srcs]
https://ftp.gnu.org/gnu/%name/%name-%ver.tar.gz

[build]
sed -i s/mawk// configure

%conf \
	--host=$XTARGET \
	--with-shared \
	--without-debug \
	--without-ada \
	--enable-widec \
	--enable-overwrite

%make && make DESTDIR=%rootfs install

ln -s libncursesw.so %rootfs/lib/libncurses.so
