ver=6.3

[srcs]
https://ftp.gnu.org/gnu/%name/%name-%ver.tar.gz

[build]
%conf \
	--host=$XTARGET \
	--with-shared \
	--without-debug \
	--without-ada \
	--enable-widec \
	--enable-overwrite

%make && make DESTDIR=%rootfs install

ln -s libncursesw.so %rootfs/usr/lib/libncurses.so
ln -s libncursesw.so %rootfs/usr/lib/libcurses.so.6.2
