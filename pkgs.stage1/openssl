ver=1.1.1n

[srcs]
https://openssl.org/source/openssl-%ver.tar.gz

[build]
CROSS_COMPILE="" \
./config \
	--prefix=%prefix \
	--openssldir=/etc/ssl \
	--libdir=/usr/lib \
	--includedir=/usr/include \
	shared \
	no-ssl3-method

%make
make DESTDIR=%rootfs MANDIR=%rootfs/share/man MANSUFFIX=ssl install
