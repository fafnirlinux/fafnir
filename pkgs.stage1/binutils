ver=2.38

[srcs]
https://ftp.gnu.org/gnu/%name/%name-%ver.tar.xz

[build]
mkdir build && cd build

../configure \
	--prefix=%prefix \
	--target=$XTARGET \
	--host=$XTARGET \
	--build=$XHOST \
	--disable-nls \
	--enable-shared \
	--disable-werror \
	--enable-64-bit-bfd

%make
make DESTDIR=%rootfs install
