ver=2.27

[srcs]
https://ftp.gnu.org/gnu/%name/%name-%ver.tar.bz2

[build]
%stuff/libibertyfix libiberty

mkdir build && cd build

export acx_cv_cc_gcc_supports_ada=no

export GCC_FOR_TARGET="$CC"

LDFLAGS="-Wl,-static"
CC="$CC -static"
CFLAGS="-D_GNU_SOURCE -D_LARGEFILE64_SOURCE" \
../configure \
	--prefix=%prefix \
	--target=$XTARGET \
	--host=$XTARGET \
	--with-sysroot=%rootfs \
	--with-pic \
	--with-system-zlib \
	--enable-64-bit-bfd \
	--enable-deterministic-archives \
	--enable-lto \
	--enable-plugins \
	--enable-relro \
	--enable-threads \
	--disable-nls \
	--disable-multilib \
	--disable-werror \
	--enable-targets=x86_64-pep \
	--enable-default-hash-style=gnu

%make \
	all-binutils \
	all-gas \
	all-ld

make DESTDIR=%rootfs \
	install-strip-binutils \
	install-strip-gas \
	install-strip-ld
