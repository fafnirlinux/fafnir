ver=2.38

[srcs]
https://ftp.gnu.org/gnu/%name/%name-%ver.tar.xz

[build]
mkdir build && cd build

.%conf \
	--host=$XTARGET \
	--target=$XTARGET \
	--build=$XHOST \
	--with-lib-path=%rootfs/lib \
	--disable-nls \
	--disable-werror

%make \
	all-binutils \
	all-gas \
	all-ld

make DESTDIR=%rootfs \
	install-strip-binutils \
	install-strip-gas \
	install-strip-ld
