ver=1.2.3

[srcs]
https://www.musl-libc.org/releases/musl-%ver.tar.gz

[build]
ARCH=$LARCH \
CC=${XTARGET}-gcc \
CROSS_COMPILE=${XTARGET}- \
LIBCC="%tools/lib/gcc/$XTARGET/12.1.0/libgcc.a" \
%conf \
	--host=$XTARGET

%make \
	AR=${XTARGET}-ar \
	RANLIB=${XTARGET}-ranlib

%make \
	AR=${XTARGET}-ar \
	RANLIB=${XTARGET}-ranlib \
	DESTDIR=%rootfs \
	install

rm -f %rootfs/lib/ld-musl-$ARCH.so.1
cp -a %rootfs/lib/libc.so ld-musl-$ARCH.so.1
#ln -sf %rootfs/lib/libc.so ld-musl-$ARCH.so.1
