[srcs]
https://musl.libc.org/releases/musl-1.2.2.tar.gz

[build]
./configure \
	CROSS_COMPILE=${XTARGET}- \
	--prefix=/ \
	--target=$XTARGET

%make && DESTDIR=%cross-tools make install
mkdir -p %cross-tools/usr
ln -s ../include %cross-tools/usr/include
rm -f %cross-tools/lib/ld-musl*
ln -s libc.so %cross-tools/lib/ld-musl-$LARCH.so.1
ln -s ../lib/libc.so %cross-tools/bin/ldd
mkdir -p %cross-tools/etc
printf "%cross-tools/lib \n" >> %cross-tools/etc/ld-musl-$LARCH.path
printf "%tools/lib \n" >> %cross-tools/etc/ld-musl-$LARCH.path
