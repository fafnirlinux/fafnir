ver=1.2.3

[srcs]
https://www.musl-libc.org/releases/musl-%ver.tar.gz

[build]
ARCH=$ARCH \
CC=${TARGET}-gcc \
CROSS_COMPILE=${TARGET}- \
LIBCC="%tools/lib/gcc/$TARGET/12.1.0/libgcc.a" \
%conf \
	--host=$TARGET

%make \
	AR=${TARGET}-ar \
	RANLIB=${TARGET}-ranlib

%make \
	AR=${TARGET}-ar \
	RANLIB=${TARGET}-ranlib \
	DESTDIR=%rootfs \
	install

rm -f %rootfs/lib/ld-musl-$ARCH.so.1
cp -a %rootfs/lib/libc.so ld-musl-$ARCH.so.1
#ln -sf %rootfs/lib/libc.so ld-musl-$ARCH.so.1
