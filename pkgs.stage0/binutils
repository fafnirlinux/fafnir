ver=2.38

[srcs]
https://ftp.gnu.org/gnu/%name/%name-%ver.tar.xz

[build]
mkdir build && cd build

../configure \
	--prefix=%tools \
	--target=$XTARGET \
	--with-sysroot=%rootfs \
	--disable-multilib \
	--disable-werror

%make \
	all-binutils \
	all-gas \
	all-ld

make \
	install-strip-binutils \
	install-strip-gas \
	install-strip-ld
