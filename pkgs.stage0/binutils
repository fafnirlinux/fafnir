[srcs]
https://ftp.gnu.org/gnu/binutils/binutils-2.37.tar.xz

[build]
mkdir build && cd build

../configure \
	--prefix=%cross-tools \
	--target=$XTARGET \
	--with-sysroot=%cross-tools/$XTARGET \
	--disable-nls \
	--disable-multilib \
	--disable-werror \
	--enable-deterministic-archives \
	--disable-compressed-debug-sections

%make configure-host
%make && make install
