ver=2.36.1

[srcs]
http://ftp.gnu.org/gnu/%name/%name-%ver.tar.xz

[build]
mkdir build && cd build

../configure \
	--prefix=%tools \
	--target=$XTARGET \
	--with-sysroot=%tools/$XTARGET \
	--disable-nls \
	--disable-multilib \
	--disable-werror \
	--enable-deterministic-archives \
	--disable-compressed-debug-sections

%make configure-host
%make && make install
