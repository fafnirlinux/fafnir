ver=2.38

[srcs]
https://ftp.gnu.org/gnu/%name/%name-%ver.tar.xz

[build]
mkdir build && cd build

../configure \
	--prefix=%tools \
	--with-sysroot=%rootfs \
	--build=$HOST \
	--host=$HOST \
	--target=$TARGET \
	--disable-nls \
	--disable-multilib \
	--disable-werror \
	--enable-deterministic-archives \
	--disable-compressed-debug-sections

%make \
	all-binutils \
	all-gas \
	all-ld

make \
	install-strip-binutils \
	install-strip-gas \
	install-strip-ld
