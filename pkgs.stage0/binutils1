ver=2.38

[srcs]
https://ftp.gnu.org/gnu/binutils/binutils-%ver.tar.xz

[build]
mkdir build && cd build

../configure \
	--prefix=%tools \
	--with-sysroot=%rootfs \
	--target=$XTARGET \
	--disable-nls \
	--disable-werror \
	--with-lib-path=%tools/lib:%tools/lib32

%make

mkdir %tools/lib && ln -s lib %tools/lib64
mkdir -p %tools/lib32
make install
