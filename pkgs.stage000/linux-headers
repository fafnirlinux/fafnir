ver=5.15.7

[srcs]
https://cdn.kernel.org/pub/linux/kernel/v5.x/linux-%ver.tar.xz

[build]
%make mrproper

make prefix=%prefix ARCH="x86_64" headers
mkdir -p %tools/$XTARGET/include

find include -name '.*' -delete
rm include/Makefile
cp -a include/* %tools/$XTARGET/include

find %tools \( -name .install -o -name ..install.cmd \) -print0 | xargs -0 rm -rf
