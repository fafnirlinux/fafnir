ver=5.41

[srcs]
https://astron.com/pub/%name/%name-%ver.tar.gz

[build]
mkdir build
pushd build
	../configure \
		--disable-bzlib \
		--disable-libseccomp \
		--disable-xzlib \
		--disable-zlib
	%make
popd

./configure --prefix=%prefix --host=$XTARGET --build=$(./config.guess)

%make FILE_COMPILE=$(pwd)/build/src/file
make DESTDIR=%rootfs install
