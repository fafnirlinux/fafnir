ver=2.36.1

[srcs]
http://ftp.gnu.org/gnu/%name/%name-%ver.tar.xz

[build]
export acx_cv_cc_gcc_supports_ada=no

mkdir build
cd build
../configure \
	--prefix=%tools \
	--build=$XHOST \
	--host=$XHOST \
	--target=$TARGET \
	--enable-targets=x86_64-pep \
	--enable-default-hash-style=gnu \
	--with-sysroot=%rootfs \
	--with-lib-path=%rootfs/lib \
	--disable-compressed-debug-sections \
	--with-pic \
	--with-system-zlib \
	--enable-64-bit-bfd \
	--enable-deterministic-archives \
	--enable-lto \
	--enable-plugins \
	--enable-relro \
	--enable-threads \
	--disable-nls \
	--disable-multilib \
	--disable-werror

%make MAKEINFO="true" all-ld all-gas all-binutils
make MAKEINFO="true" install-ld install-gas

rm %tools/bin/$TARGET-ld

install -Dm755 binutils/elfedit %tools/bin/$TARGET-elfedit
