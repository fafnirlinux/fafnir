ver=2.36.1

[srcs]
http://ftp.gnu.org/gnu/%name/%name-%ver.tar.xz

[build]
mkdir build && cd build

../configure \
	--prefix=%dest \
	--target=$TARGET \
	--with-sysroot=%rootfs/$TARGET \
	--disable-compressed-debug-sections \
	--enable-deterministic-archives \
	--disable-multilib \
	--disable-static \
	--disable-werror \
	--disable-nls

make configure-host
%make && make install
