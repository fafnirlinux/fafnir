ver=6.2

[srcs]
https://ftp.gnu.org/pub/gnu/%name/%name-%ver.tar.gz

[build]
./configure \
	--prefix=%tools \
	--without-debug

%make -C include
%make -C progs tic

install -m755 progs/tic %tools/bin

chmod +x misc/ncurses-config
cp misc/ncurses-config %tools/bin/$TARGET-ncursesw6-config

sed -i "s|%tools|%rootfs|" %tools/bin/$TARGET-ncursesw6-config
