ver=5.12.10

[srcs]
https://cdn.kernel.org/pub/linux/kernel/v5.x/linux-%ver.tar.xz

[build]
make mrproper

ARCH=x86 make headers

find usr/include \( -name .install -o -name ..install.cmd \) -exec rm -vf {} \;
mkdir -p %dest/$TARGET/include
cp -r usr/include/* %dest/$TARGET/include/
rm %dest/$TARGET/include/Makefile
