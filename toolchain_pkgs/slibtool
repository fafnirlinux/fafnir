ver=0.5.34

[srcs]
http://midipix.org/dl/%name/%name-%ver.tar.xz

[build]
NATIVE_CC="$TARGET-clang" \
NATIVE_CXX="$TARGET-clang++" \
NATIVE_CPP="$TARGET-cpp" \
NATIVE_HOST="$TARGET" \
NATIVE_CFGHOST="$TARGET" \
./configure \
	--prefix=%tools \
	--sbindir=%tools/bin
%make
make install

ln -sf slibtool %tools/bin/libtool

mkdir -p %tools/share/libtoolize/AC_CONFIG_AUX_DIR \
	%tools/share/libtoolize/AC_CONFIG_MACRO_DIRS \
	%tools/share/aclocal/

for macros in ltversion.m4 libtool.m4 ltargz.m4 ltdl.m4 ltoptions.m4 ltsugar.m4 lt~obsolete.m4; do
	install -Dm644 %files/$macros %tools/share/aclocal/$macros
	install -Dm644 %files/$macros %tools/share/libtoolize/AC_CONFIG_MACRO_DIRS/$macros
done

for aux in compile depcomp install-sh missing; do
	install -Dm755 %files/$aux %tools/share/libtoolize/AC_CONFIG_AUX_DIR/$aux
done

install -Dm755 %files/ltmain.sh %tools/share/libtoolize/AC_CONFIG_AUX_DIR/ltmain.sh

install -Dm755 %stuff/config.sub %tools/share/libtoolize/AC_CONFIG_AUX_DIR/config.sub
install -Dm755 %stuff/config.guess %tools/share/libtoolize/AC_CONFIG_AUX_DIR/config.guess

install -Dm755 %files/libtoolize %tools/bin/libtoolize
sed -i "s,uncom_sysroot,%rootfs,g" %tools/bin/libtoolize
