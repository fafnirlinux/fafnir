ver=5.41

[srcs]
https://astron.com/pub/%name/%name-%ver.tar.gz

[build]
mkdir build
pushd build
	../configure $BUILDFLAGS \
		--disable-bzlib \
		--disable-libseccomp \
		--disable-xzlib \
		--disable-zlib
	%make
popd

%conf $BUILDFLAGS
%make FILE_COMPILE=$(pwd)/build/src/file
make DESTDIR=%rootfs install
